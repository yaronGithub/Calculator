<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Ex"
             Title="Ex">
    <VerticalStackLayout>
        <Border StrokeThickness="1">
            <AbsoluteLayout HeightRequest="50">
                <Label
                    x:Name="myLabel"
                    FontSize="Micro"
                    AbsoluteLayout.LayoutBounds="-0.5,0"
                    Text=""/>
                <Entry
                    x:Name="myEntry"
                    Placeholder="Email"/>
                <Label 
                    x:Name="errLabel"
                    TextColor="Red"
                    Text=""
                    AbsoluteLayout.LayoutBounds="160, 0"/>
            </AbsoluteLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>